<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="250.0" prefWidth="300.0"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="proj2LamLavoie.Main">
   <top>
      <MenuBar fx:id="menu" prefHeight="15.0" prefWidth="608.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="file" mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="exit" mnemonicParsing="false" onAction="#exitWindow" text="Exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <HBox fx:id="buttons" alignment="CENTER" prefHeight="256.0" prefWidth="460.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="playButton" mnemonicParsing="false" onAction="#getStartingPitch" text="Play Scale" />
            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopScale" text="Stop Playing" />
         </children>
      </HBox>
   </center>
</BorderPane>
